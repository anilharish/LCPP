#include<iostream>

int userinput();
void printoutput(double number);

int main ()
{
  double number;
  input=userinput();
  printoutput(number);
  return 0;
}

int userinput()
{
  std::cout << "Please enter the number you want to find out is odd or even: \n";
  double input;
  std::cin >> input;
  return input;
}

void printoutput(double input)
{
  if (input%2 == 0)
    {
      std::cout << "The number entered is even\n";
    }
  else
    {
      std::cout << "The number entered is odd\n";
    }
}

  
